<h5>Product</h5>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@product.price) %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<% if current_user && policy(@product).edit? %>
  <%= link_to 'Edit', edit_admin_product_path(@product), class: 'button tiny radius' %>
<%end %>
<% if current_user && policy(@product).destroy? %>
<%= link_to 'Delete', admin_product_path(@product), method: :delete, class: 'button tiny radius'  %>
<%end %>


