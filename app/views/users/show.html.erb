<h5><%=@user.first_name %> <%= @user.last_name %></h5>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if current_user && policy(@user).edit? %>
  <%= link_to 'Edit', edit_user_path(@user), class: 'button tiny radius' %>
<%end %>
<% if current_user && policy(@user).destroy? %>
  <%= link_to 'Delete', user_path(@user), method: :delete, class: 'button tiny radius'  %>
<%end %>

